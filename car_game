command = ""
carRunning = False
carStop = True
while True:
    command = input("> ").lower()
    if command == "start":
        if carRunning is False:
            print("car started")
        else:
            print("car already running")
        carStop = False
        carRunning = True
    elif command == "stop":
        if carStop is False:
            print("car stopped")
        else:
            print("can't go slower than standing")
        carStop = True
        carRunning = False
    elif command == "help":
        print("""
start - to start the car
stop - to stop the car
quit - to exit
        """)
    elif command == "quit":
        break
    else:
        print("unknown command - try 'help'")
