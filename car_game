command = ""
gas = False
breaks = True
while True:
    command = input("> ").lower()
    if command == "start":
        if gas is False:
            print("car started")
        else:
            print("car already running")
        breaks = False
        gas = True
    elif command == "stop":
        if breaks is False:
            print("car stopped")
        else:
            print("can't go slower than standing")
        breaks = True
        gas = False
    elif command == "help":
        print("""
start - to start the car
stop - to stop the car
quit - to exit
        """)
    elif command == "quit":
        break
    else:
        print("unknown command - try 'help'")
